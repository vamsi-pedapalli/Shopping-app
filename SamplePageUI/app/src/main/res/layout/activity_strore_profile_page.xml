<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/Retailer_Photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            tools:context="com.example.android.samplepageui.MainActivity">

            <FrameLayout
                style="@style/Frame"
                android:layout_margin="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true">

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/big_line_heightx9"
                        android:alpha="0.75"
                        android:backgroundTint="#8BC34A"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/retail_home" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/big_line_heightx9"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/business_shot" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/big_line_heightx9"
                            android:scaleType="centerCrop"
                            android:src="@drawable/casual_shot" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/big_line_heightx9"
                            android:scaleType="centerCrop"
                            android:src="@drawable/full_sleeve" />
                    </LinearLayout>

                </HorizontalScrollView>
            </FrameLayout>

            <FrameLayout
                style="@style/Frame"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_line_heightx4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/big_line_heightx4"
                            android:layout_height="@dimen/big_line_heightx4"
                            android:scaleType="centerCrop"
                            android:src="@drawable/store_main" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="ZAyRA lJlyykilkjyffffffreddd"
                                android:textAllCaps="true"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingTop="2dp"
                                android:text="Pheonix market city city city city grtereddd ssd, whitefield"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:paddingRight="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="4.8"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="2488"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                style="@style/Frame"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/big_line_heightx2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/call_button_vector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Open Now : 11:00am to 11:00pm"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/big_line_heightx2"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/rate"
                            style="@style/buttons_style"
                            android:layout_height="48dp"
                            android:background="@drawable/ripple_button"
                            android:clickable="true"
                            android:elevation="4dp"
                            android:text="@string/underlined_rate"
                            android:textAllCaps="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                        <Button
                            style="@style/buttons_style"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/ripple_button"
                            android:elevation="4dp"
                            android:text="Check-in"
                            android:textAllCaps="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                        <Button
                            style="@style/buttons_style"
                            android:background="@drawable/ripple_button"
                            android:elevation="4dp"
                            android:text="Follow"
                            android:textAllCaps="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/Frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/extra_texts"
                        android:text="Ongoing offer - upto 80% off" />

                    <View style="@style/divider_line" />

                    <TextView
                        style="@style/extra_texts"
                        android:text="New collection in store" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/Frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Header_retail_profile"
                            android:text="Store Details" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textline"
                                    style="@style/Side_index_style"
                                    android:text="For" />

                                <TextView
                                    style="@style/details_style"
                                    android:layout_width="match_parent"
                                    android:gravity="end"
                                    android:text="Men | Women | Children"
                                    android:textAllCaps="false" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Side_index_style"
                                    android:text="Category" />

                                <TextView
                                    style="@style/details_style"
                                    android:layout_width="match_parent"
                                    android:gravity="end"
                                    android:text="Apparel | Footwear | Accessories | Travel"
                                    android:textAllCaps="false" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Side_index_style"
                                    android:text="Purpose" />

                                <TextView
                                    style="@style/details_style"
                                    android:layout_width="match_parent"
                                    android:gravity="end"
                                    android:text="Party | Ethnic | Sports | Work | Casual"
                                    android:textAllCaps="false"

                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Side_index_style"
                                    android:text="Store Type" />

                                <TextView
                                    style="@style/details_style"
                                    android:layout_width="match_parent"
                                    android:gravity="end"
                                    android:text="Multi branded"
                                    android:textAllCaps="false" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Side_index_style"
                                    android:text="Store Size" />

                                <TextView
                                    style="@style/details_style"
                                    android:layout_width="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:gravity="end"
                                    android:text="Large"
                                    android:textAllCaps="false" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Side_index_style"
                                    android:text="Trial Rooms" />

                                <TextView
                                    style="@style/details_style"
                                    android:layout_width="match_parent"
                                    android:gravity="end"
                                    android:text="2"
                                    android:textAllCaps="false" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/Side_index_style"
                                android:layout_width="wrap_content"
                                android:text="Exchange policy" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            >

                            <TextView
                                style="@style/Side_index_style"
                                android:layout_width="wrap_content"
                                android:text="About the store" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/Frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Header_retail_profile"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Product types" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:gravity="end"
                            android:text="see more..."
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/tags"
                            android:layout_gravity="left"
                            android:background="@drawable/ripple_tags"
                            android:padding="8dp"
                            android:text="Formal shirt" />

                        <TextView
                            style="@style/tags"
                            android:background="@drawable/ripple_tags"
                            android:text="V-neck shirt" />

                        <TextView
                            style="@style/tags"
                            android:layout_gravity="right"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/ripple_tags"
                            android:text="Belt" />

                        <TextView
                            style="@style/tags"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/ripple_tags"
                            android:text="Track suit" />


                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/Frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Header_retail_profile"
                            android:text="Address" />

                        <TextView
                            style="@style/details_style"
                            android:layout_marginTop="2dp"
                            android:text="@string/Lengthy_string" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/location_vector" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout style="@style/Frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Header_retail_profile"
                        android:text="Similar Stores" />


                    <HorizontalScrollView
                        android:id="@+id/store_suggestions_horizontal_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/store_suggestions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:src="@drawable/store_icon_re" />

                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:scaleType="fitXY"
                                android:src="@drawable/store_icon" />


                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:src="@drawable/store_icon_rec" />

                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:src="@drawable/store_i" />

                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:src="@drawable/store_ii" />

                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:src="@drawable/store_iii" />

                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:src="@drawable/store_iiiii" />

                            <ImageView
                                android:layout_width="@dimen/big_line_heightx4"
                                android:layout_height="@dimen/big_line_heightx4"
                                android:src="@drawable/store_icon_reccc" />

                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>