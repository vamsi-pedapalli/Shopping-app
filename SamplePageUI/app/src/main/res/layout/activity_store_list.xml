<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_third_page"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    tools:context="com.example.android.samplepageui.StoreListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:scaleType="centerCrop"
                android:src="@drawable/retail_home" />

            <TextView
                android:id="@+id/store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:text="@string/_100_feet_road_indiranagar"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/store_address"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:text="@string/allen_solly"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageView
                android:id="@+id/icon_female"
                android:layout_width="@dimen/big_line_heightx2"
                android:layout_height="@dimen/big_line_heightx2"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/no_of_bookmarks"
                android:src="@mipmap/ic_launcher" />


            <ImageView
                android:id="@+id/icon_male"
                android:layout_width="@dimen/big_line_heightx2"
                android:layout_height="@dimen/big_line_heightx2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/icon_female"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/icon_kid"
                android:layout_width="@dimen/big_line_heightx2"
                android:layout_height="@dimen/big_line_heightx2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/icon_male"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="@dimen/big_line_height"
                android:layout_height="@dimen/big_line_height"
                android:layout_above="@+id/no_of_bookmarks"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/no_of_bookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="8888 Bookmarks" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_location_on_black_24dp"
                android:gravity="center|clip_horizontal"
                android:layout_alignParentRight="true"
                android:background="@drawable/grey_circle_shape"
                android:layout_margin="16dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:alpha="0.7"
                android:text="1.2 km"

                />


        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
